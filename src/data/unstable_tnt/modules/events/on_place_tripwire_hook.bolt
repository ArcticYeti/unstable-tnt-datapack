from wicked_expressions:api import Scoreboard
from crankshaft:api import Event, Entrypoint
from crankshaft:events import on_player_tick


def handler(event):
    used_tripwire = Scoreboard('unstable_tnt.used_tripwire', 'used:tripwire_hook')['@s']

    if used_tripwire >= 1:
        used_tripwire = 0
        event.trigger()


on_place_tripwire_hook = Event('on_place_tripwire_hook')
on_place_tripwire_hook.attach_handler(handler, on_player_tick, Entrypoint.EVENT)
